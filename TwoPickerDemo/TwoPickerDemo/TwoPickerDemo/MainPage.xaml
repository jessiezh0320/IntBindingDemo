<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:TwoPickerDemo"
             x:Class="TwoPickerDemo.MainPage">

    <StackLayout>
        <Picker  Title="Select a value" x:Name="mypicker"
        ItemsSource="{Binding Path= PickerChoices}"
        SelectedItem="{Binding SelectedRecord}"         
        ItemDisplayBinding="{Binding ShowValue}"/>

        <Button  Text="get value"  Clicked="Button_Clicked"/>
    </StackLayout>

</ContentPage>
